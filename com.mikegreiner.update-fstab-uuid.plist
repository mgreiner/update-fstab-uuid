<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.mikegreiner.update-fstab-uuid</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/update-fstab-uuid.sh</string>
        <string>VOLUME_NAME_PLACEHOLDER</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/var/log/update-fstab-uuid.log</string>

    <key>StandardErrorPath</key>
    <string>/var/log/update-fstab-uuid.error.log</string>

    <key>UserName</key>
    <string>root</string>
</dict>
</plist>
